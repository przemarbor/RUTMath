<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.fragment.game.normal.NormalGameFragment">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_image" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/ProgressBarCustom"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent"
        app:layout_constraintBottom_toTopOf="@+id/keyboardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintHorizontal_bias="0.53">

        <TextView
            android:id="@+id/equation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/accent"
            android:textSize="34sp" />

    </LinearLayout>

    <com.hexbit.rutmath.ui.view.KeyboardView
        android:id="@+id/keyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/graphicRepresentationContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/keyboardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLayout"
        app:layout_constraintVertical_bias="0.19999999">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shape1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
            <ImageView
                android:id="@+id/shape2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
            <ImageView
                android:id="@+id/shape3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
            <ImageView
                android:id="@+id/shape4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
            <ImageView
                android:id="@+id/shape5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/shape6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
            <ImageView
                android:id="@+id/shape7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
            <ImageView
                android:id="@+id/shape8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
            <ImageView
                android:id="@+id/shape9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
            <ImageView
                android:id="@+id/shape10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_fill" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>